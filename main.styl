@import "nib";
@import url("http://fonts.googleapis.com/css?family=Roboto\+Condensed:400");
@import url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css");

global-reset()

*
    box-sizing border-box

html, body
    height 100%
    width 100%

body
    animation background 30s ease infinite
    background-color #e55c3a
    color #f6f6f6
    font-family 'Roboto Condensed', sans-serif
    font-weight 400

div#container
    position relative
    text-align center
    top 50%
    transform translateY(-50%)
    width 100%

div#name
    animation text 30s ease infinite
    font-size 64px
    padding 0 16px 8px
    text-shadow 0px 2px 0px rgba(246,246,246,0.30), 0px 4px 0px rgba(0,0,0,0.15)

div#sub
    font-size 18px
    padding 0 16px 64px

a#links
    -webkit-mask-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAIAAACQd1PeAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAA5JREFUeNpiYGBgAAgwAAAEAAGbA+oJAAAAAElFTkSuQmCC")
    border-radius 64px
    display inline-block
    height 96px
    margin 16px
    overflow hidden
    position relative
    width 96px
    > i
        color white
        position relative
        text-shadow 0px 2px 0px rgba(246,246,246,0.30), 0px 4px 0px rgba(0,0,0,0.15)
        top 50%
        transform translateY(-50%)
    > div#circle
        border 4px dashed #f6f6f6
        border-radius 64px
        box-shadow 0px 4px 0px rgba(0,0,0,0.15)
        height 96px
        position absolute
        transition 0.4s ease-in
        width 96px
        z-index 1
    &:hover > div#circle
        opacity 0
        transform scale(1.2,1.2)

@keyframes background
    0%
        background-color #e55c3a
    50%
        background-color #e6472e
    100%
        background-color #e55c3a

@keyframes text
    0%
        text-shadow 0px 2px 0px rgba(246,246,246,0.30), 0px 4px 0px rgba(0,0,0,0.15)
    50%
        text-shadow 0px 6px 0px rgba(246,246,246,0.1), 0px 12px 0px rgba(0,0,0,0.05)
    100%
        text-shadow 0px 2px 0px rgba(246,246,246,0.30), 0px 4px 0px rgba(0,0,0,0.15)
