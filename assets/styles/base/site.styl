//============================
// base/site.styl
//============================

html,
body
  min-height 90%
  width 100%
  overflow-x hidden // because 100vw bugs

// html will hold font size styles so we can use rem
html
  font-size 16px

body
  background-color: $tone["light"]
  color: $tone["dark"]
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.3)
  font-family: $type["font"]
  font-weight 400
  line-height 1.5rem
